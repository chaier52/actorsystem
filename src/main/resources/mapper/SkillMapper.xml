<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javaee.mapper.SkillMapper">

    <select id="findAll" resultType="com.javaee.po.Skill">
        SELECT 
            skill_id as skillId,
            skill_name as skillName
        FROM skill
    </select>

    <select id="findById" resultType="com.javaee.po.Skill">
        SELECT 
            skill_id as skillId,
            skill_name as skillName
        FROM skill
        WHERE skill_id = #{id}
    </select>

    <select id="findByName" resultType="com.javaee.po.Skill">
        SELECT 
            skill_id as skillId,
            skill_name as skillName
        FROM skill
        WHERE skill_name = #{skillName}
    </select>

    <insert id="insert" parameterType="com.javaee.po.Skill" useGeneratedKeys="true" keyProperty="skillId">
        INSERT INTO skill (skill_name)
        VALUES (#{skillName})
    </insert>

    <update id="update" parameterType="com.javaee.po.Skill">
        UPDATE skill
        SET skill_name = #{skillName}
        WHERE skill_id = #{skillId}
    </update>

    <delete id="deleteById">
        DELETE FROM skill WHERE skill_id = #{id}
    </delete>

</mapper> 